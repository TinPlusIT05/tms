<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	    
		<record id="view_hr_employee_grade_tree" model="ir.ui.view">
			<field name="name">view.hr.employee.grade.tree</field>
			<field name="model">hr.employee.grade</field>
			<field name="arch" type="xml">
				<tree string="Employee Grades">
					<field name="job_id"/>
					<field name="level_id"/>
				</tree>
			</field>
		</record>
		
		<record id="view_hr_employee_grade_form" model="ir.ui.view">
			<field name="name">view.hr.employee.grade.form</field>
			<field name="model">hr.employee.grade</field>
			<field name="arch" type="xml">
				<form string="Employee Grade" version="7.0">
					<sheet>
						<h1><field name="name"/></h1>
						<group colspan="4" col="4">
							<field name="job_id"/>
							<field name="level_id"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_hr_employee_grade_search" model="ir.ui.view">
			<field name="name">view.hr.employee.grade.search</field>
			<field name="model">hr.employee.grade</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Employee Grades">
					<field name="job_id"/>
					<field name="level_id"/>
				</search>
			</field>
		</record>
		
	</data>
</openerp>
