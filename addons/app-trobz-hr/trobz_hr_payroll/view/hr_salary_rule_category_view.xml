<?xml version="1.0" ?>
<openerp>
    <data>
    	<!-- make the form look nicer than the one from original hr_payroll module -->
        <record id="hr_payroll.hr_salary_rule_category_form" model="ir.ui.view">
		    <field name="name">hr.salary.rule.category.form</field>
		    <field name="model">hr.salary.rule.category</field>
		    <field name="arch" type="xml">
		        <form string="Salary Categories" version="7.0">
		        	<sheet>
		                <group col="4">
		                    <field name="name"/>
		                    <field name="code"/>
		                    <field name="parent_id"/>
		                </group>
		                <group col="4" string="Notes">
		                    <field name="note" nolabel="1" />
		                </group>
		            </sheet>
		        </form>
		    </field>
		</record>
	</data>
</openerp>