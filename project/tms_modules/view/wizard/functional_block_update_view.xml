<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
		<!-- Update Functional Block Wizard Form View -->
        <record id="view_functional_block_update_wizard" model="ir.ui.view">
            <field name="name">Functional Block Update</field>
            <field name="model">functional.block.update</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Functional Block Update" version="7.0">
                    <h3>Are you sure want to update functional block?</h3>
                    <footer>
	                    <button name="functional_block_update" string="Update" type="object" class="oe_highlight" />
						<label string="or " />
	                    <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>

		<!-- Action Open Update Functional Block Wizard Form View -->
        <record id="action_tms_functional_block_update" model="ir.actions.act_window">
			<field name="name">Functional Block Update</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="res_model">functional.block.update</field>
			<field name="target">new</field>
			<field name="domain">[]</field>
    		<field name="context">{}</field>
		</record>
    </data>
</openerp>
