<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<!-- Create HR Resource Allocation Wizard Form View -->
		<record id="view_hr_resource_allocation_wizard_form" model="ir.ui.view">
			<field name="name">view.hr.resource.allocation.wizard.form</field>
			<field name="model">hr.resource.allocation.wizard</field>
			<field name="arch" type="xml">
				<form string="Create Resource Allocation for x more sprints" version="7.0">
					<group>
						<field name="number_of_sprint"/>
					</group>
					<footer>
						<button name="create_resource_allocation" string="Create"
                            type="object" class="oe_highlight" />
						<label string="or" />
						<button special="cancel" string="Cancel" class="oe_link" />
					</footer>
				</form>
			</field>
        </record>

    </data>
</openerp>
